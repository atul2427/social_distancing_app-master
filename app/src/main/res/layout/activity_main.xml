<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">

    <TextView
            android:layout_width="274dp"
            android:layout_height="49dp"
            android:id="@+id/main_prompt_textview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:fontFamily="@font/raleway_semibold" android:textSize="24sp"
            android:textColor="@color/colorTextTV" app:layout_constraintTop_toBottomOf="@+id/main_greeting_textview"
            app:layout_constraintVertical_bias="0.103" android:text="@string/main_going_somewhere"
            android:textAlignment="center"/>
    <TextView
            android:layout_width="315dp"
            android:layout_height="51dp"
            android:id="@+id/main_greeting_textview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.064"
            android:fontFamily="@font/raleway_semibold" android:textSize="30sp"
            android:textColor="@color/colorTextTV" android:textAlignment="center"/>
    <Button
            android:text="@string/main_start_trip"
            android:layout_width="149dp"
            android:layout_height="139dp"
            android:id="@+id/main_start_trip_button"
            app:layout_constraintTop_toBottomOf="@+id/main_prompt_textview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.237" android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/colorTextTV" android:background="@drawable/start_trip_button_background"
            android:textSize="18sp" android:onClick="onStartTripButtonClick"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/main_stats_button"
            app:layout_constraintTop_toBottomOf="@+id/main_start_trip_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.402" android:background="@drawable/ic_assessment_24px"
            android:onClick="onStatsButtonClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>